<script type="text/javascript">
// Mobile menu functionality
    function toggleMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');
        const closeIcon = document.getElementById('close-icon');
        
        if (mobileMenu.classList.contains('hidden')) {
            // Show menu
            mobileMenu.classList.remove('hidden');
            menuIcon.classList.add('hidden');
            closeIcon.classList.remove('hidden');
        } else {
            // Hide menu
            mobileMenu.classList.add('hidden');
            menuIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
        }
    }

    function closeMobileMenu() {
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');
        const closeIcon = document.getElementById('close-icon');
        
        mobileMenu.classList.add('hidden');
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
    }

    // Modal functionality
    function openModal() {
        document.getElementById('comingSoonModal').style.display = 'block';
    }

    function closeModal() {
        document.getElementById('comingSoonModal').style.display = 'none';
    }

    // Close the modal when clicking outside of it
    window.onclick = function (event) {
        let modal = document.getElementById('comingSoonModal');
        if (event.target == modal) {
            closeModal();
        }
    }

    // Escape key to close modal
    document.addEventListener('keydown', function (event) {
        if (event.key === "Escape") {
            closeModal();
        }
    });

    // Optional enhanced parallax effect - only runs if device supports it
    // This is not necessary for the basic parallax effect which works with CSS only
    document.addEventListener('DOMContentLoaded', function () {
        // Mobile menu event listener
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        if (mobileMenuButton) {
            mobileMenuButton.addEventListener('click', toggleMobileMenu);
        }

        // Check if we're not on a mobile device - parallax can be janky on mobile
        if (window.innerWidth > 768) {
            // Get all parallax elements
            const parallaxElements = document.querySelectorAll('.parallax');

            // Create a simple parallax effect on scroll
            window.addEventListener('scroll', function () {
                const scrolled = window.pageYOffset;

                parallaxElements.forEach(function (element) {
                    // Move the background at a slower rate than the scroll
                    const offset = scrolled * 0.4;
                    element.style.backgroundPositionY = `calc(50% + ${offset}px)`;
                });
            });
        }

        // Update the copyright year
        document.querySelector("#copy_year").innerHTML = (new Date().getFullYear());
    });
</script>