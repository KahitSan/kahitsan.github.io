{% set pricingPlans = [
    {
        title: "Day Pass",
        price: "₱99",
        duration: "/day",
        description: "Perfect for trying us out",
        features: [
            "No commitment",
            "Change of environment",
            "Last-minute needs",
            "Cubicle add-on: ₱50/day"
        ],
        popular: true
    },
    {
        title: "Weekender",
        price: "₱599",
        duration: "/30 days",
        description: "Perfect for side projects",
        features: [
            "Every weekend access",
            "Perfect for side hustles",
            "Ideal for group projects",
            "Cubicle add-on: ₱300"
        ],
        popular: false
    },
    {
        title: "10-Day Pass",
        price: "₱799",
        duration: "/30 days",
        description: "Perfect for part-timers",
        features: [
            "10 days in a month",
            "Flexible scheduling",
            "Balance work & school",
            "Cubicle add-on: ₱200"
        ],
        popular: false
    },
    {
        title: "Hot Desk",
        price: "₱1,499",
        duration: "/month",
        description: "Perfect for regulars",
        features: [
            "Unlimited daily access",
            "Consistent work routine",
            "Best long-term value",
            "Cubicle add-on: ₱200/mo"
        ],
        popular: false
    }
] %}

<section id="pricing" class="py-20 bg-dark-secondary">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gold-light">Flexible Plans For Every Budget</h2>
            <p class="text-xl text-gray-400 max-w-3xl mx-auto">
                Whether you're a student, freelancer, or professional, our transparent pricing ensures you only pay
                for what you need. All plans include high-speed Wi-Fi, complimentary coffee and water, and access to
                our collaborative community spaces.
            </p>
        </div>

        <!-- Pricing Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for plan in pricingPlans %}
            <div class="bg-dark rounded-lg overflow-hidden shadow-gold transition duration-300 hover:shadow-gold-lg pricing-card border {% if plan.popular %}border-2 border-gold relative transform md:scale-105{% else %}border-gray-800{% endif %}">
                {% if plan.popular %}
                <div class="absolute top-0 right-0 bg-gold text-white px-4 py-1 text-sm font-semibold">
                    Most Popular
                </div>
                {% endif %}
                <div class="p-8">
                    <span class="text-xs uppercase tracking-wider text-gray-500 mb-1 block">{{ plan.description }}</span>
                    <h3 class="text-2xl font-bold text-white mb-4">{{ plan.title }}</h3>
                    <div class="mb-6">
                        <span class="text-4xl font-bold text-gold-light">{{ plan.price }}</span>
                        <span class="text-gray-400">{{ plan.duration }}</span>
                    </div>
                    <ul class="mb-8 space-y-3">
                        {% for feature in plan.features %}
                        <li class="flex items-center text-gray-400">
                            <svg class="w-5 h-5 text-gold-light mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd"
                                    d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                    clip-rule="evenodd" />
                            </svg>
                            {{ feature }}
                        </li>
                        {% endfor %}
                    </ul>
                    {# <a href="#" onclick="openModal(); return false;"
                        class="block w-full py-3 px-6 text-center rounded-md font-semibold transition duration-300 
                        {% if plan.popular %}bg-gold hover:bg-gold-light text-white{% else %}bg-transparent hover:bg-gold text-gold-light hover:text-white border-2 border-gold hover:border-gold{% endif %}">
                        Join Our Community
                    </a> #}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>