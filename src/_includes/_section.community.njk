<!-- Community Section Data -->
{% set communityData = {
  title: "Join Our Community",
  subtitle: "Connect with students, entrepreneurs, and professionals who are building successful careers and businesses in Naga City and beyond",
  stats: [
    {
      value: "Upcoming",
      label: "Networking Events"
    },
    {
      value: "Growing", 
      label: "Friendly Network"
    }
  ],
  cta: {
    text: "Join Discord Community",
    url: "/community"
  },
  visualPlaceholder: {
    title: "Community Network",
    subtitle: "Members collaborating and networking"
  }
} %}

<!-- Join Our Community Section -->
<section class="py-16 bg-dark">
    <div class="max-w-6xl mx-auto px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
            <!-- Community Content -->
            <div>
                <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gold-light">
                    {{ communityData.title }}
                </h2>
                
                <p class="text-gray-400 mb-6 leading-relaxed text-lg">
                    {{ communityData.subtitle }}
                </p>
                
                <!-- Community Stats -->
                <div class="flex gap-8 mb-8">
                    {% for stat in communityData.stats %}
                        <div class="text-center">
                            <h4 class="text-2xl text-gold-light font-bold">
                                {{ stat.value }}
                            </h4>
                            <p class="text-sm text-gray-400">
                                {{ stat.label }}
                            </p>
                        </div>
                    {% endfor %}
                </div>
                
                <!-- CTA Button -->
                <a href="{{ communityData.cta.url }}" 
                    class="bg-[#5865F2] hover:bg-[#4752C4] text-white font-semibold px-6 py-3 rounded-lg transition-all duration-300 hover:-translate-y-0.5 inline-block shadow-lg flex items-center gap-2 hover:shadow-lg relative overflow-hidden shining-effect">
                    <i class="fab fa-discord w-6 h-6"></i>
                    {{ communityData.cta.text }}
                    <span class="shine"></span>
                </a>
            </div>
            
            <!-- Community Visual -->
            <div class="h-80 community-gradient rounded-xl flex items-center justify-center text-white text-xl text-center font-semibold">
                <div>
                    {{ communityData.visualPlaceholder.title }}<br>
                    <small class="text-lg opacity-90">
                        {{ communityData.visualPlaceholder.subtitle }}
                    </small>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Required CSS -->
<style type="text/css">
    /* Community gradient for visual placeholder */
    .community-gradient {
        background: linear-gradient(45deg, #80570d, #b38728);
    }
    
    /* Gold shadow effect */
    .shadow-gold-light\/30 {
        box-shadow: 0 10px 15px -3px rgba(179, 135, 40, 0.3), 0 4px 6px -2px rgba(179, 135, 40, 0.05);
    }
</style>

{# Discord Shining Effect #}
<style type="text/css">
.shining-effect {
    position: relative;
    overflow: hidden;
}

.shining-effect .shine {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.5);
    transform: skewX(-45deg);
    transition: all 0.3s ease-in-out;
    animation: shine-animation 2s infinite;
}

@keyframes shine-animation {
    0% {
        left: -100%;
    }
    50% {
        left: 100%;
    }
    100% {
        left: -100%;
    }
}
</style>