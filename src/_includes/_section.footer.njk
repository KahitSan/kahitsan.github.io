<!-- Footer Section -->
<footer class="bg-dark-secondary py-12 ">
    <div class="max-w-6xl mx-auto px-8">
        <!-- Footer Content Grid -->
        <div class="grid grid-cols-1 md:grid-cols-5 gap-8 mb-8">
            <!-- Brand Section -->
            <div>
                <!-- Brand Description -->
                <h4 class="text-xl font-semibold mb-4 text-gold-light relative pb-2">
                    <span class="relative z-10">
                        {% image "images/logo.png", "99px", { 
                            class: "h-10 w-auto inline-block align-middle", 
                            alt: "KahitSan", 
                            onerror: "this.style.display='none';this.nextElementSibling.style.display='inline';"
                        }, [99] %}
                        <span style="display:none;" aria-hidden="false">KahitSan</span>
                    </span>
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-gold"></span>
                </h4>
                <p class="text-gray-400 leading-relaxed mb-6">
                    Your workspace and business partner in Naga City. Affordable, flexible, and community-driven.
                </p>
            </div>
            
            <!-- Footer Links Sections -->
            <div>
                <h4 class="text-xl font-semibold mb-4 text-gold-light relative pb-2">
                    <span class="relative z-10">Quick Links</span>
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-gold"></span>
                </h4>
                <div class="space-y-2">
                    {% for link in navigation.footer.quickLinks %}
                        <p>
                            <a href="{{ link.url }}" 
                               class="text-gray-400 hover:text-gold-light transition-colors duration-300 block">
                                {{ link.title }}
                            </a>
                        </p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h4 class="text-xl font-semibold mb-4 text-gold-light relative pb-2">
                    <span class="relative z-10">Business</span>
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-gold"></span>
                </h4>
                <div class="space-y-2">
                    {% for link in navigation.footer.business %}
                        <p>
                            <a href="{{ link.url }}" 
                               class="text-gray-400 hover:text-gold-light transition-colors duration-300 block">
                                {{ link.title }}
                            </a>
                        </p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h4 class="text-xl font-semibold mb-4 text-gold-light relative pb-2">
                    <span class="relative z-10">Support</span>
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-gold"></span>
                </h4>
                <div class="space-y-2">
                    {% for link in navigation.footer.support %}
                        <p>
                            <a href="{{ link.url }}" 
                               class="text-gray-400 hover:text-gold-light transition-colors duration-300 block">
                                {{ link.title }}
                            </a>
                        </p>
                    {% endfor %}
                </div>
            </div>
            <div>
                <h4 class="text-xl font-semibold mb-4 text-gold-light relative pb-2">
                    <span class="relative z-10">Contact</span>
                    <span class="absolute bottom-0 left-0 w-12 h-0.5 bg-gold"></span>
                </h4>
                <div class="text-gray-400 leading-relaxed space-y-2">
                    <div>
                        <p class="mb-2">
                            Unit 7, BT2 Building<br>
                            Roxas Avenue Diversion Road<br>
                            Triangulo, Naga City
                        </p>
                        <p class="mb-2">+63 905 546 7677</p>
                        <p>info@kahitsan.com</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Copyright -->
        <div class="text-center pt-8 border-t border-gold-light/10 text-gray-500">
            <p>&copy; 2025 KahitSan. All rights reserved.</p>
        </div>
    </div>
</footer>
